{% extends '../partials/base.twig' %}

{% block title %}
    Добавление сервера
{% endblock %}

{% block content %}
    <h2>Форма добавления сервера</h2>
    {% include '../partials/_message.twig' %}
    <form class="mb-3" method="post" action="/add-server/">
        <div class="mb-3">
            <label for="hostname" class="form-label">Наименование хоста</label>
            <input type="text" name="hostname" class="form-control" id="hostname" value="{{ hostname ? hostname }}">
        </div>
        <div class="mb-3">
            <label for="CPU_number" class="form-label">Количество процессорных ядер</label>
            <input type="text" name="CPU_number" class="form-control" id="CPU_number" value="{{ CPU_number ? CPU_number }}">
        </div>
        <button type="submit" class="btn btn-success">Добавить сервер</button>
    </form>
{% endblock %}